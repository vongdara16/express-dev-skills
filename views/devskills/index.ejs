<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Document</title>
</head>

<body>
  <h1>Skills</h1>
  <% if(error) { %>
    <h2>
      <%= error %>
    </h2>
  <% } %>
  <ul>
    <% devSkills.forEach(function(skill) { %>
      <li>
        <form action="/devskills/<%= skill._id %>?_method=DELETE" class="delete-form" method="POST">
          <button type="submit">X</button>
        </form>
        <a href="/devskills/<%= skill._id %>">
          <%= skill.text %>
        </a>
        -
        <%= skill.done ? 'done' : 'not done' %>
      </li>
    <% }) %> 
  </ul>
  <a href="/devskills/new">Add New Skill</a>
  <a href="/"><br>HOME</a>
</body>

</html>